doctype html
html
    head
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
        link(href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet")
        link(href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet")
        script(defer src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js")
        script(defer src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js")
        script(defer src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js")
        script(defer src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.js")
        script(defer src="https://unpkg.com/filepond/dist/filepond.js")
        script(defer src= "/javascripts/fileUpload.js")
        link(rel="stylesheet", href="/css/style.css")
        title Numismatics
    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            a.navbar-brand(href='#') Numismatics
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarsExampleDefault.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='/') Home 
                    li.nav-item
                        a.nav-link(href='/coins') Coins
                    li.nav-item
                        a.nav-link(href='/about') About 
                    if user     
                        li.nav-item
                            a.nav-link(href='/coins/add') Add
                    if user
                        if !user.isAdmin
                            li.nav-item 
                                a.nav-link(href='/mycoins') My Coins
                ul.navbar-nav.right
                    if session.cart
                        li.nav-item
                            a.nav-link(href='/shopping_cart') Cart
                                p(class="cart-num") <strong>#{session.cart.totalQty}</strong>
                    else
                        li.nav-item
                            a.nav-link(href='/shopping_cart') Cart
                    if user
                        li.nav.item
                            a.nav-link(href='/users/'+ user._id) Profile
                        li.nav-item
                            a.nav-link(href='/users/logout') Logout
                    else
                        li.nav-item
                            a.nav-link(href='/users/register') Register
                        li.nav-item
                            a.nav-link(href='/users/login') Login
   
        .container
            br
            != messages('message',locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            
            br
            hr
            footer
                p Copyright &copy; 2021 Arnas Erslovas
        script(src='https://code.jquery.com/jquery-3.1.1.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js' integrity='sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js' integrity='sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s' crossorigin='anonymous')
        script(src='/javascripts/main.js')